@page
@model Connect_Four_Server.Pages.GamesNumberEachPlayerModel

@{
    ViewData["Title"] = "GamesNumberEachPlayer";
}

<h1>Games Number For Each Player</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayersTbl[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayersTbl[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayersTbl[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayersTbl[0].GamesNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PlayersTbl) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesNum)
            </td>

        </tr>
}
    </tbody>
</table>
